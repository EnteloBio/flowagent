# Security
SECRET_KEY=your-secret-key-here  # Required: Generate a secure random key
OPENAI_API_KEY=your-openai-api-key-here  # Required for LLM functionality

# Environment
ENVIRONMENT=development
DEBUG=false

# OpenAI Settings
OPENAI_MODEL=gpt-4
OPENAI_FALLBACK_MODEL=gpt-3.5-turbo

# Rate Limiting
MAX_RETRIES=5
RETRY_DELAY=2.0
REQUEST_INTERVAL=1.0

# Agent Settings
MAX_CONCURRENT_WORKFLOWS=5
WORKFLOW_TIMEOUT=3600
AGENT_TIMEOUT=30.0
AGENT_MAX_RETRIES=3
AGENT_RETRY_DELAY=1.0

# Executor Settings
EXECUTOR_TYPE=local  # Options: local, hpc
HPC_SYSTEM=slurm    # Options: slurm, sge, torque
HPC_QUEUE=all.q     # Default queue for HPC jobs
HPC_DEFAULT_MEMORY=4G  # Default memory allocation for HPC jobs
HPC_DEFAULT_CPUS=1   # Default CPU allocation for HPC jobs
HPC_DEFAULT_TIME=60  # Default time limit in minutes

# Monitoring
ENABLE_MONITORING=true
METRICS_PORT=9090
LOG_LEVEL=INFO
